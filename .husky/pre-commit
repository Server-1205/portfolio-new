#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# TypeScript type checking
echo "🔧 Type checking..."
npm run type-check

# Linting and formatting
echo "🎨 Linting and formatting..."
npm run lint

# Checking staged files
echo "📝 Checking staged files..."
npx lint-staged

echo "✅ All checks passed!"
